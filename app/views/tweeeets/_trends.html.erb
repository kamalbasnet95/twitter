<div class="column">
	<% if signed_in? %>
	<div class = "box">
		<article class="media">
			<div class="media-left">
				<figure class="image is-64x64">
					<img src="https://bulma.io/images/placeholders/64x64.png">
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<strong> <%= current_user.name %></strong>
					<p>@<%= current_user.username %></p>
				</div>		
			</div> 
		</article>
		<p><strong>12.1K</strong> Following <span> </span> <span> </span><span> </span><strong>11K </strong> Followers </p>
	</div>
	<div class="list is-hoverable ">
	  <a class="list-item ">
	    <i class="fa fa-home" ></i> Home
	  </a>
	  <a class="list-item">
	   <i class="fa fa-hashtag" ></i> Explore
	  </a>
	  <a class="list-item">
	   <i class="fa fa-bell" ></i>  Notifications
	  </a>
	  <a class="list-item">
	   <i class="fa fa-envelope" ></i>  Messages
	  </a>
	  <a class="list-item">
	   <i class="fa fa-bookmark" ></i> Bookmark
	  </a>
	  <a class="list-item">
	    <i class="fa fa-list" ></i> Lists
	  </a>
	  <a class="list-item">
	   <i class="fa fa-user" ></i>  Profile
	  </a>
	  <a class="list-item">
	   <i class="fa fa-ellipsis-h" ></i> More
	  </a>
	  <a class="list-item">
	  	<% if signed_in? %>
	  	<i class="fa fa-sign-out-alt"></i>
      	<%= button_to 'Sign out', sign_out_path, method: :delete, class:"button is-info" %>
    	<% end %>
    	<p class="control">
     	<%= link_to 'Tweeeet', new_tweeeet_path, class:"button is-link"%> 
  		</p>
		</a>
	</div>
	
	

	<%end%> 
	
</div>